<h1>Hi there <%= @user.first_name %>!</h1>

<table>
  <% @users.each do |user| %>
    <tr>
      <td><strong> Name:</strong> </td>
      <td><%="#{user.first_name} #{user.last_name}"%></td>
      <td><strong> Email:</strong> </td>
      <td><%= user.email %></td>
      <% if session[:current_user_id] == user.id %>
        <td><%=link_to "Edit user", user %></td>
        <td><%=link_to "Delete user", user, method: :delete %></td>
      <% else %>
        <td>&nbsp;</td>
        <td>&nbsp;</td>
      <% end %>
    </tr>
  <% end %>
</table>

<br>

<%=link_to "Logout", logout_path, method: :delete %>
