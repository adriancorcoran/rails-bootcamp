<%# navigation bar %>

<div id="navigation" style="--top-bar-background:#00848e; --top-bar-color:#f9fafb; --top-bar-background-lighter:#1d9ba4;">
  <div class="Polaris-ButtonGroup Polaris-ButtonGroup--segmented Polaris-ButtonGroup--fullWidth">
    <%# check if user logged in %>
    <% if session[:current_user_id] %>
      <%= render "shared/button", text: "Shop", link: session[:shop_url], style_class: 'Polaris-Button--primary' %>
      <%= render "shared/button", text: "Show All Users", link: users_path %>
      <%= render "shared/button", text: "Logout", link: logout_path, method: :delete %>
    <% else %>
      <%= render "shared/button", text: "Sign Up", link: new_user_path, style_class: 'Polaris-Button--primary' %>
      <%= render "shared/button", text: "Login", link: login_path %>
    <% end %>  
  </div>
</div>