<% content_for :main_heading do %>
  <p>Main Heading</p>
<% end %>

<!DOCTYPE html>
<html>
  <head>
    <title>RailsBootcamp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_link_tag "https://sdks.shopifycdn.com/polaris/2.1.2/polaris.min.css" %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <div class="Polaris-Page Polaris-Page--fullWidth">
      <div class="Polaris-Page__Content">
        <div class="Polaris-Layout">

          <div class="Polaris-Layout__Section">
            <div class="Polaris-Page__Header Polaris-Page__Header--hasSeparator">
                <div class="Polaris-Page__Title">
                    <div>
                        <h1 class="Polaris-DisplayText Polaris-DisplayText--sizeLarge"><%= yield :main_heading %></h1>
                    </div>
                </div>
            </div>
          </div>


          <div class="Polaris-Layout__Section Polaris-Layout__Section">

            <%= render "flash_messages/flash_messages" %>

            <div class="ui-layout__item">
              <div class="Polaris-Card">

                <div class="Polaris-Card__Header Polaris-Card__Header--title">
                  <h2 class="Polaris-Heading">Title</h2>
                </div>
              
                <div class="Polaris-Card__Section Polaris-Card__Section--secondary-title">
                  <p>Secondary Title</p>
                </div>
              
                <div class="Polaris-Card__Section">
                  <%= yield %>                          
                </div>
              </div>
            </div>
          </div>
                    
        </div>
      </div>
    </div>

  </body>
</html>
